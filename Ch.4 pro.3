import java.io.*;
import java.util.*;

public class FileLetterCounter 
{
  public static void main(String[] args) 
  {
    Scanner sc = new Scanner(System.in);
    
    // Step 1: Input file name from the user
    System.out.print("Enter file name: ");
    String fileName = sc.nextLine();
    
    // Step 2: Check if file exists
    File file = new File(fileName);
    if (!file.exists()) 
    {
      System.out.println("Error: File not found");
      return;
    }
    
    // Step 3: Input character to count from the user
    System.out.print("Enter character to count: ");
    char character = sc.nextLine().charAt(0);
    
    // Step 4: Open the file and read contents into a string
    String contents = "";
    try (BufferedReader reader = new BufferedReader(new FileReader(file))) 
    {
      String line = reader.readLine();
      while (line != null) 
      {
        contents += line;
        line = reader.readLine();
      }
    } 
    catch (IOException e) 
    {
      System.out.println("Error: Could not read file");
      return;
    }
    
    // Step 5: Count the occurrences of the character
    int count = 0;
    for (int i = 0; i < contents.length(); i++) 
    {
      if (contents.charAt(i) == character) 
      {
        count++;
      }
    }
    
    // Step 6: Display the result
    System.out.println("The character '" + character + "' appears in the file " + fileName + " " + count + " times.");
  }
}

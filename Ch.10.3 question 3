class Calculator:
    def add(self, num1, num2):
        return num1 + num2

    def subtract(self, num1, num2):
        return num1 - num2

    def multiply(self, num1, num2):
        return num1 * num2

    def divide(self, num1, num2):
        if num2 == 0:
            return "You can't divide by zero!"
        else:
            return num1 / num2

# Example usage:
calculator = Calculator()

# Addition
result_add = calculator.add(5.0, 3.0)
print("Addition:", result_add)

# Subtraction
result_subtract = calculator.subtract(5.0, 3.0)
print("Subtraction:", result_subtract)

# Multiplication
result_multiply = calculator.multiply(5.0, 3.0)
print("Multiplication:", result_multiply)

# Division
result_divide = calculator.divide(5.0, 0.0)  # This will print "You can't divide by zero!"
print("Division:", result_divide)
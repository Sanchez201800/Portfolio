public class Temperature {
    // Private field to hold Fahrenheit temperature
    private double ftemp;

    // Constructor: Accepts a Fahrenheit temperature and assigns it to the ftemp field
    public Temperature(double fahrenheit) {
        this.ftemp = fahrenheit;
    }

    // Public method to set a new Fahrenheit temperature
    public void setFahrenheit(double fahrenheit) {
        this.ftemp = fahrenheit;
    }

    // Public method to get the current Fahrenheit temperature
    public double getFahrenheit() {
        return ftemp;
    }

    // Public method to convert Fahrenheit to Celsius
    public double getCelsius() {
        return (5.0 / 9.0) * (ftemp - 32);
    }

    // Public method to convert Fahrenheit to Kelvin
    public double getKelvin() {
        return ((5.0 / 9.0) * (ftemp - 32)) + 273;
    }
}
